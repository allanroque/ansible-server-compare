<VirtualHost *:80>
    ServerName localhost
    DocumentRoot /var/www/html/report
    
    <Directory /var/www/html/report>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    
    ErrorLog ${APACHE_LOG_DIR}/report_error.log
    CustomLog ${APACHE_LOG_DIR}/report_access.log combined
</VirtualHost>
